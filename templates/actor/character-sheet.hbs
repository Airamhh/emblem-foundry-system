<form class="{{cssClass}} flexcol" autocomplete="off">
  
  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-portrait">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
      <div class="hp-bar-container">
        <div class="hp-bar-header">
          <span class="hp-value">{{system.stats.hp.value}}/{{system.stats.hp.max}}</span>
        </div>
        <div class="hp-bar-wrapper">
          <div class="hp-bar-fill" style="width: {{hpPercent}}%"></div>
        </div>
      </div>
    </div>
    <div class="header-fields flex-col">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Character Name"/>
      </h1>
      <div class="header-stats-row">
        <div class="stat-block">
          <label>{{localize "EMBLEM.Level"}}</label>
          <input type="number" name="system.level" value="{{system.level}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Experience"}}</label>
          <input type="number" name="system.experience" value="{{system.experience}}" data-dtype="Number" max="100"/>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Mov"}}</label>
          <input type="number" name="system.stats.mov.value" value="{{system.stats.mov.value}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <button type="button" class="level-up" {{#unless canLevelUp}}disabled{{/unless}}>Level Up</button>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tabs --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="stats">Stats</a>
    <a class="item" data-tab="inventory">Inventory</a>
    <a class="item" data-tab="biography">Biography</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    
    {{!-- Stats Tab --}}
    <div class="tab stats" data-group="primary" data-tab="stats">
      
      {{!-- Primary Stats (4x2 grid) --}}
      <h3>{{localize "EMBLEM.Stats"}}</h3>
      <div class="stats-grid-4">
        <div class="stat-block">
          <label>{{localize "EMBLEM.HP"}}</label>
          <input type="number" name="system.stats.hp.value" value="{{system.stats.hp.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.hp.max}}</span>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Str"}}</label>
          <input type="number" name="system.stats.str.value" value="{{system.stats.str.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.str.max}}</span>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Mag"}}</label>
          <input type="number" name="system.stats.mag.value" value="{{system.stats.mag.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.mag.max}}</span>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Skl"}}</label>
          <input type="number" name="system.stats.skl.value" value="{{system.stats.skl.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.skl.max}}</span>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Spd"}}</label>
          <input type="number" name="system.stats.spd.value" value="{{system.stats.spd.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.spd.max}}</span>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Lck"}}</label>
          <input type="number" name="system.stats.lck.value" value="{{system.stats.lck.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.lck.max}}</span>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Def"}}</label>
          <input type="number" name="system.stats.def.value" value="{{system.stats.def.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.def.max}}</span>
        </div>
        <div class="stat-block">
          <label>{{localize "EMBLEM.Res"}}</label>
          <input type="number" name="system.stats.res.value" value="{{system.stats.res.value}}" data-dtype="Number"/>
          <span class="stat-max">/ {{system.stats.res.max}}</span>
        </div>
      </div>

      {{!-- Derived Stats (3x2 grid) --}}
      <h3>Combat Stats</h3>
      <div class="stats-grid-3">
        <div class="stat-block">
          <label>Hit</label>
          <input type="number" value="{{system.derived.hit}}" disabled/>
        </div>
        <div class="stat-block">
          <label>Avoid</label>
          <input type="number" value="{{system.derived.avoid}}" disabled/>
        </div>
        <div class="stat-block">
          <label>Crit</label>
          <input type="number" value="{{system.derived.crit}}" disabled/>
        </div>
        <div class="stat-block">
          <label>Crit Avoid</label>
          <input type="number" value="{{system.derived.critAvoid}}" disabled/>
        </div>
        <div class="stat-block">
          <label>Attack Speed</label>
          <input type="number" value="{{system.derived.attackSpeed}}" disabled/>
        </div>
        <div class="stat-block">
          <label>Attack</label>
          <input type="number" value="{{system.derived.attack}}" disabled/>
        </div>
      </div>

      {{!-- Growth Rates (4x2 grid) --}}
      <h3>{{localize "EMBLEM.Growth"}} (%)</h3>
      <div class="stats-grid-4">
        <div class="stat-block">
          <label>HP</label>
          <input type="number" name="system.growthRates.hp" value="{{system.growthRates.hp}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>Str</label>
          <input type="number" name="system.growthRates.str" value="{{system.growthRates.str}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>Mag</label>
          <input type="number" name="system.growthRates.mag" value="{{system.growthRates.mag}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>Skl</label>
          <input type="number" name="system.growthRates.skl" value="{{system.growthRates.skl}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>Spd</label>
          <input type="number" name="system.growthRates.spd" value="{{system.growthRates.spd}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>Lck</label>
          <input type="number" name="system.growthRates.lck" value="{{system.growthRates.lck}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>Def</label>
          <input type="number" name="system.growthRates.def" value="{{system.growthRates.def}}" data-dtype="Number"/>
        </div>
        <div class="stat-block">
          <label>Res</label>
          <input type="number" name="system.growthRates.res" value="{{system.growthRates.res}}" data-dtype="Number"/>
        </div>
      </div>

      {{!-- Weapon Triangle --}}
      <h3>Weapon Triangle</h3>
      <div class="weapon-triangle">
        <div class="triangle-container">
          <div class="triangle-title">Physical</div>
          <div class="triangle-shape">
            <div class="triangle-vertex top">
              <i class="fas fa-sword weapon-triangle-icon"></i>
              <span>Sword</span>
            </div>
            <div class="triangle-vertex left">
              <i class="fas fa-axe weapon-triangle-icon"></i>
              <span>Axe</span>
            </div>
            <div class="triangle-vertex right">
              <i class="fas fa-location-arrow weapon-triangle-icon"></i>
              <span>Lance</span>
            </div>
            <svg class="triangle-lines" viewBox="0 0 200 200">
              <defs>
                <marker id="arrowhead-physical" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
                  <polygon points="0 0, 10 3.5, 0 7" fill="#666" />
                </marker>
              </defs>
              <path d="M 100 40 L 40 160" stroke="#666" stroke-width="2" marker-end="url(#arrowhead-physical)" />
              <path d="M 40 160 L 160 160" stroke="#666" stroke-width="2" marker-end="url(#arrowhead-physical)" />
              <path d="M 160 160 L 100 40" stroke="#666" stroke-width="2" marker-end="url(#arrowhead-physical)" />
            </svg>
          </div>
        </div>
        <div class="triangle-container">
          <div class="triangle-title">Magic</div>
          <div class="triangle-shape">
            <div class="triangle-vertex top magic-anima">
              <i class="fas fa-book weapon-triangle-icon"></i>
              <span>Anima</span>
            </div>
            <div class="triangle-vertex left magic-light">
              <i class="fas fa-book weapon-triangle-icon"></i>
              <span>Light</span>
            </div>
            <div class="triangle-vertex right magic-dark">
              <i class="fas fa-book weapon-triangle-icon"></i>
              <span>Dark</span>
            </div>
            <svg class="triangle-lines" viewBox="0 0 200 200">
              <defs>
                <marker id="arrowhead-magic" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
                  <polygon points="0 0, 10 3.5, 0 7" fill="#666" />
                </marker>
              </defs>
              <path d="M 100 40 L 40 160" stroke="#666" stroke-width="2" marker-end="url(#arrowhead-magic)" />
              <path d="M 40 160 L 160 160" stroke="#666" stroke-width="2" marker-end="url(#arrowhead-magic)" />
              <path d="M 160 160 L 100 40" stroke="#666" stroke-width="2" marker-end="url(#arrowhead-magic)" />
            </svg>
          </div>
        </div>
      </div>

      {{!-- Weapon Ranks (3x2 grid) --}}
      <h3>Weapon Ranks</h3>
      <div class="stats-grid-3">
        <div class="stat-block">
          <label>Sword</label>
          <select name="system.weaponRanks.sword">
            {{#select system.weaponRanks.sword}}
            <option value="-">-</option>
            <option value="E">E</option>
            <option value="D">D</option>
            <option value="C">C</option>
            <option value="B">B</option>
            <option value="A">A</option>
            <option value="S">S</option>
            {{/select}}
          </select>
        </div>
        <div class="stat-block">
          <label>Lance</label>
          <select name="system.weaponRanks.lance">
            {{#select system.weaponRanks.lance}}
            <option value="-">-</option>
            <option value="E">E</option>
            <option value="D">D</option>
            <option value="C">C</option>
            <option value="B">B</option>
            <option value="A">A</option>
            <option value="S">S</option>
            {{/select}}
          </select>
        </div>
        <div class="stat-block">
          <label>Axe</label>
          <select name="system.weaponRanks.axe">
            {{#select system.weaponRanks.axe}}
            <option value="-">-</option>
            <option value="E">E</option>
            <option value="D">D</option>
            <option value="C">C</option>
            <option value="B">B</option>
            <option value="A">A</option>
            <option value="S">S</option>
            {{/select}}
          </select>
        </div>
        <div class="stat-block">
          <label>Bow</label>
          <select name="system.weaponRanks.bow">
            {{#select system.weaponRanks.bow}}
            <option value="-">-</option>
            <option value="E">E</option>
            <option value="D">D</option>
            <option value="C">C</option>
            <option value="B">B</option>
            <option value="A">A</option>
            <option value="S">S</option>
            {{/select}}
          </select>
        </div>
        <div class="stat-block">
          <label>Tome</label>
          <select name="system.weaponRanks.tome">
            {{#select system.weaponRanks.tome}}
            <option value="-">-</option>
            <option value="E">E</option>
            <option value="D">D</option>
            <option value="C">C</option>
            <option value="B">B</option>
            <option value="A">A</option>
            <option value="S">S</option>
            {{/select}}
          </select>
        </div>
        <div class="stat-block">
          <label>Staff</label>
          <select name="system.weaponRanks.staff">
            {{#select system.weaponRanks.staff}}
            <option value="-">-</option>
            <option value="E">E</option>
            <option value="D">D</option>
            <option value="C">C</option>
            <option value="B">B</option>
            <option value="A">A</option>
            <option value="S">S</option>
            {{/select}}
          </select>
        </div>
      </div>
    </div>

    {{!-- Inventory Tab --}}
    <div class="tab inventory" data-group="primary" data-tab="inventory">
      
      {{!-- Weapons --}}
      <h3>{{localize "EMBLEM.Weapons"}} <a class="item-create" data-type="weapon"><i class="fas fa-plus"></i></a></h3>
      <div class="item-table-wrapper">
        <table class="item-table">
          <thead>
            <tr class="item-table-header">
              <th class="header-name">{{localize "EMBLEM.Name"}}</th>
              <th class="header-uses">{{localize "EMBLEM.Uses"}}</th>
              <th class="header-actions">{{localize "EMBLEM.Actions"}}</th>
            </tr>
          </thead>
          <tbody>
            {{#each weapons as |weapon id|}}
            <tr class="item-table-row {{#if weapon.system.equipped}}equipped{{/if}}" data-item-id="{{weapon._id}}">
              <td class="item-name-cell">
                <div class="item-image">
                  <img src="{{weapon.img}}" title="{{weapon.name}}"/>
                </div>
                <span class="item-name">{{weapon.name}}</span>
              </td>
              <td class="item-uses-cell">
                {{#if weapon.system.uses}}
                <div class="uses-display">
                  <span class="uses-current">{{weapon.system.uses}}</span>
                  <span class="uses-separator">/</span>
                  <span class="uses-max">{{weapon.system.usesMax}}</span>
                </div>
                <div class="uses-bar">
                  <div class="uses-bar-fill" style="width: {{multiply (divide weapon.system.uses weapon.system.usesMax) 100}}%"></div>
                </div>
                {{else}}
                <span class="uses-display">â€”</span>
                {{/if}}
              </td>
              <td class="item-actions-cell">
                <a class="item-control item-equip" title="Equip"><i class="fas {{#if weapon.system.equipped}}fa-check-circle{{else}}fa-circle{{/if}}"></i></a>
                <a class="item-control item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      {{!-- Skills --}}
      <h3>{{localize "EMBLEM.Skills"}} <a class="item-create" data-type="skill"><i class="fas fa-plus"></i></a></h3>
      <div class="item-table-wrapper">
        <table class="item-table">
          <thead>
            <tr class="item-table-header">
              <th class="header-name">{{localize "EMBLEM.Name"}}</th>
              <th class="header-description">{{localize "EMBLEM.Description"}}</th>
              <th class="header-actions">{{localize "EMBLEM.Actions"}}</th>
            </tr>
          </thead>
          <tbody>
            {{#each skills as |skill id|}}
            <tr class="item-table-row" data-item-id="{{skill._id}}">
              <td class="item-name-cell">
                <div class="item-image">
                  <img src="{{skill.img}}" title="{{skill.name}}"/>
                </div>
                <span class="item-name">{{skill.name}}</span>
              </td>
              <td class="item-description-cell">
                <span class="item-description">{{skill.system.description}}</span>
              </td>
              <td class="item-actions-cell">
                <a class="item-control item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      {{!-- Items --}}
      <h3>{{localize "EMBLEM.Items"}} <a class="item-create" data-type="item"><i class="fas fa-plus"></i></a></h3>
      <div class="item-table-wrapper">
        <table class="item-table">
          <thead>
            <tr class="item-table-header">
              <th class="header-name">{{localize "EMBLEM.Name"}}</th>
              <th class="header-uses">{{localize "EMBLEM.Quantity"}}</th>
              <th class="header-actions">{{localize "EMBLEM.Actions"}}</th>
            </tr>
          </thead>
          <tbody>
            {{#each items as |item id|}}
            <tr class="item-table-row" data-item-id="{{item._id}}">
              <td class="item-name-cell">
                <div class="item-image">
                  <img src="{{item.img}}" title="{{item.name}}"/>
                </div>
                <span class="item-name">{{item.name}}</span>
              </td>
              <td class="item-uses-cell">
                {{#if item.system.quantity}}
                <span class="uses-display">{{item.system.quantity}}</span>
                {{else}}
                <span class="uses-display">1</span>
                {{/if}}
              </td>
              <td class="item-actions-cell">
                <a class="item-control item-use" title="Use"><i class="fas fa-hand-sparkles"></i></a>
                <a class="item-control item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
      {{editor enrichedBiography target="system.biography" button=true owner=owner editable=editable}}
    </div>

  </section>
</form>
